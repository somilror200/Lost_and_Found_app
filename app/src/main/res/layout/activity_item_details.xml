<!-- activity_item_details.xml -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/name_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_label_text_view"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/phone_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/name_text_view"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_label_text_view"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/description_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/phone_text_view"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_label_text_view"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/date_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/description_text_view"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_label_text_view"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/location_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/date_text_view"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_label_text_view"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/location_text_view"
            android:layout_marginTop="24dp"/>
    </RelativeLayout>
</ScrollView>
